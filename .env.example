# Django Environment
DJANGO_ENV=dev
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Hosts (separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1,*

# Project Branding (Customize para seu projeto)
PROJECT_NAME=My SaaS Project
SITE_TITLE=My SaaS Project Admin
SITE_HEADER=My SaaS Project
SITE_BRAND=My SaaS Project
API_TITLE=My SaaS Project API
COPYRIGHT=My SaaS Project

# Admin URL Prefix (mais seguro que "admin" padrão)
# Use algo único para evitar ataques diretos: manage, dashboard, control, etc
ADMIN_URL_PREFIX=manage

# URLs Configuration (para separação futura)
# FRONTEND_URL: URL do frontend (vazio = mesmo domínio)
# Quando separar: https://meusite.com
FRONTEND_URL=http://localhost:5173

# API_URL: Prefixo da API (relativo quando junto, absoluto quando separado)
# Quando junto: /api
# Quando separado: https://api.meusite.com
API_URL=/api

# CORS (desabilitado quando tudo junto, habilitar quando separar)
CORS_ENABLED=False

# Database (Production)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# ===========================================
# Email/SMTP Configuration
# ===========================================
# Funciona com qualquer provedor SMTP (Mailgun, SendGrid, SES, etc)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-smtp-user@example.com
EMAIL_HOST_PASSWORD=your-smtp-password
DEFAULT_FROM_EMAIL=noreply@example.com
DEFAULT_FROM_NAME=My SaaS Project

# Password Reset Configuration
PASSWORD_RESET_TOKEN_EXPIRATION_HOURS=24
PASSWORD_RESET_URL_PATH=/reset-password
